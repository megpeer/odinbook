<div>
    <%= user.email %>
</div>
<div>
    <%= render "profile/follower_count", user: user%>
    <%= user.followees.count %> following 
    <p>
    <% if user == current_user %>
        <%= link_to "Edit profile", edit_user_registration_path %>
    <% elsif current_user %>
        <%= render "profile/follow_button", user: user %>
    <% end %>
</div>
<div>
    <br>
    <div><h3>users I am following:</h3></div>
    <br>
    <div>
        <% current_user.followees.each do |u| %>
        <%= "#{u.email}" %>
        <br>
        <% end %>
    </div>
</div>
<div>
    <br>
    <div><h3>my followers:</h3></div>
    <br>
    <div>
        <% current_user.followers.each do |u| %>
        <%= "#{u.email}" %> 
        <br>
        <% end %>
    </div>
<br>
    <div><h3>my pending connections:</h3></div>
    <br>
    <div>
        <% if @pending_friends.any? %>
  <ul>
    <% @pending_friends.each do |pending_friend| %>
      <li>
        <%= pending_friend.follower.email %>
       </li>
    <% end %>
  </ul>
<% else %>
  <p>No pending friend requests.</p>
<% end %>
    </div>

</div>
</p>