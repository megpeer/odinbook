    <% end %>
  <% end %>
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign Up", new_registration_path(resource_name),
      class: "inline-flex items-center justify-center
              w-40 h-10 m-1
              rounded-full
              text-sm font-semibold
              bg-(--color-accent)
              hover:bg-(--color-primary)
              cursor-pointer" %><br />
<% end %>
  
  </div>
