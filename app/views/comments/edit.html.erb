
<%= form_with(model: [ @comment.post, @comment ], class: "contents") do |form| %>

  <div class="my-5">
edit comment:
    <%= form.text_area :content, rows: 4, class: 
      ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", 
      {"border-gray-400 focus:outline-blue-600": @comment.errors[:content].none?, 
      "border-red-400 focus:outline-red-600": @comment.errors[:content].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
