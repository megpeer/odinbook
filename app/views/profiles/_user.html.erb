<div class="flex flex-col space-y-6">

  <%# profile info card %>
  <div class="flex">
    <div>
  
    <% if user.image.attached? %>
    <%= image_tag user.avatar_thumbnail, class: "rounded-full mb-4 shrink-0" %>
    <% else %>
    <%= image_tag("avatar.svg") %>
    <% end %>
    </div>
    <div class="">
      <div class="text-xl font-semibold">
      <%= user.name %>
      </div>
      <div class="text-xs font-thin">
      <% if user.bio? %>
      "<%= user.bio%>"
      <% else %>
      [bio]
      <% end %>
      </div>
    </div>

    <%# friend interacables %>
    <div class="flex flex-col">
      <turbo-frame id="user-<%= user.id %>-follow-button">
      <%= render "profiles/follow_button", user: user %>
      </turbo-frame>

      
    </div>
  
  </div>
  
  <%# user's posts %>
  <div>
    <% @posts.each do |post| %>
        <div>
          <%= render "posts/post", post: post %>
        </div>
    <%end%>  
  </div>

</div>
