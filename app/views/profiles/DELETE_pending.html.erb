<% if user.pending.any? %>
<div>
    <div><h3>friend requests:</h3></div>
        <ul>
        <% user.pending.each do |pending_friend| %>
                <%= pending_friend.name %> 
                <%= button_to "accept", 
                accept_userpage_profile_path(id: pending_friend.id), 
                method: :patch, class: "m-1
                                        w-20
                                        h-8
                                        rounded-lg 
                                        font-semibold
                                        text-xs
                                        bg-(--color-accent) 
                                        hover:bg-(--color-primary)
                                        cursor-pointer" %>
                <%= button_to "delete", 
                delete_userpage_profile_path(id: pending_friend.id), 
                method: :delete, class: "m-1
                                        w-20
                                        h-8
                                        rounded-lg 
                                        font-semibold
                                        text-xs
                                        bg-(--color-accent) 
                                        hover:bg-(--color-primary)
                                        cursor-pointer"  %>
        <% end %>
        </ul>
    <% end %>
</div>
