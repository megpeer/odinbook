<span class="font-semibold text-lg p-10 ">Please log in</span>
<div class="h-10"></div>
<div class="">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-3xs outline outline-(--color-text)/50 outline-offset-3 focus:outline-(--color-primary) rounded-sm" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-3xs outline outline-(--color-text)/50 outline-offset-3 focus:outline-(--color-primary) rounded-sm" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field m-2 accent-(--color-primary)">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", 
      class: "inline-flex items-center justify-center
              w-25 h-10
              rounded-full
              text-sm font-semibold
              bg-(--color-accent)
              hover:bg-(--color-primary)
              cursor-pointer" %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Reset password", new_password_path(resource_name),
      class: "inline-flex items-center justify-center
              w-30 h-10 m-1
              rounded-full
              text-sm font-semibold
              bg-(--color-accent)
              hover:bg-(--color-primary)
              cursor-pointer" %><br />
<% end %>
  </div>
<% end %>
</div>
<div class="flex flex-col w-50 items-center">
<div class="">


<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false },
                    class: "m-1
                            w-40
                            h-10 
                            flex items-center
                            p-2
                            rounded-full
                            font-semibold
                            text-xs
                            bg-(--color-accent) 
                            hover:bg-(--color-primary)
                            cursor-pointer" do%>
                            <div class="flex items-center gap-1">
      <span>
