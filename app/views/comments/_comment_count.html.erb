<%= link_to post_path(post), data: { turbo_frame: "_top" } do %>
<div class="flex flex-row">
    <div class=" m-2 font-semibold"><%= (post.comments.count) %></div>
    <div data-controller="icon-swap" data-icon-swap-default-url="<%= image_path('Comment-Light.svg') %>" data-icon-swap-hover-url="<%= image_path('Comment-Dark.svg') %>">
        <img src="<%= image_path('Comment-Light.svg') %>" data-icon-swap-target="icon" onmouseover="this.src=this.parentNode.dataset.iconSwapHoverUrl" onmouseout="this.src=this.parentNode.dataset.iconSwapDefaultUrl">
    </div>
</div>
<% end %>